@{
    var identity = User.Identity;
    var isAuthenticated = identity.IsAuthenticated;
    var userName = string.IsNullOrWhiteSpace(identity.Name) ? "" : identity.Name;
    //todo 
}

<!--=== Header v5 ===-->
<div id="navbar" class="navbar navbar-default">
    <div class="navbar-container" id="navbar-container">
        <!-- #section:basics/sidebar.mobile.toggle -->
        <button type="button" class="navbar-toggle menu-toggler pull-left" id="menu-toggler" data-target="#sidebar">
            <span class="sr-only">Toggle sidebar</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>

        <div class="container">
            <div class="navbar-header pull-left">
                <!-- #section:basics/navbar.layout.brand -->
                <a href="#" class="navbar-brand">
                    <small>
                        <i class="fa fa-leaf"></i>
                        欢迎 @userName！
                    </small>
                </a>
            </div>
            <div class="navbar-buttons navbar-header pull-right" role="navigation">
                <ul class="nav ace-nav">
                    <li>
                        <a href="/Live/Home/qianIndex">
                            <i class="fa fa-home"></i>
                            首页
                        </a>
                    </li>
                    @if (isAuthenticated)
                    {
                        <li>
                            <a href="/Live/Activity/ActivityManage">
                                <i class="fa fa-cogs"></i>
                                后台管理
                            </a>
                        </li>
                    }
                    @if (isAuthenticated)
                    {
                        <li>
                            <a href="/Live/Manage/UserTrace">
                                <i class="fa fa-pencil-square-o"></i>
                                日志
                            </a>
                        </li>
                    }
                    @{
                        if (this.User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a href="@Url.RouteUrl("Auths_default", new {area = "Auths", controller = "Account", action = "Logout"})">
                                    <i class="fa fa-power-off"></i>
                                    登出
                                </a>
                            </li>
                        }
                        else
                        {

                            <li>
                                <a href="@Url.RouteUrl("Auths_default", new {area = "Auths", controller = "Account", action = "Login"})">
                                    <i class="fa fa-user"></i>
                                    登录
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
        <!-- /section:basics/navbar.dropdown -->
    </div>
    <!-- /.navbar-container -->
</div>
<!--=== End Header v5 ===-->